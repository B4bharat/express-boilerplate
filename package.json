{
	"name": "bms-movie-league",
	"version": "1.0.0",
	"description": "BMS Movie League is a game wherein the user is the owner of a virtual theater who would strategically add movies to it in order to earn the maximum virtual earnings they can",
	"author": "Bharat Poptwani <bharat.poptwani@bookmyshow.com>",
	"main": "src/index.js",
	"license": "MIT",
	"engines": {
		"node": ">=8",
		"yarn": "*"
	},
	"scripts": {
		"precommit": "yarn lint",
		"prestart": "yarn docs",
		"start": "cross-env NODE_ENV=production pm2 start ./src/index.js",
		"dev": "nodemon ./src/index.js | npm run lint:watch",
		"lint": "./node_modules/.bin/eslint '**/*.js' --ignore-path .gitignore --ignore-pattern internals/scripts",
		"lint:watch": "./node_modules/.bin/esw --ignore-path .gitignore --ignore-pattern internals/scripts -w --fix",
		"lint:fix": "npm run lint -- --fix",
		"formatting:fix": "onchange '**/*.js' -- prettier --write {{changed}}",
		"test": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha --timeout 20000 --recursive src/api/tests",
		"test:unit": "cross-env NODE_ENV=test mocha src/api/tests/unit",
		"test:integration": "cross-env NODE_ENV=test mocha --timeout 20000 src/api/tests/integration",
		"test:watch": "cross-env NODE_ENV=test mocha --watch src/api/tests/unit",
		"coverage": "nyc report --reporter=text-lcov | coveralls",
		"postcoverage": "opn coverage/lcov-report/index.html",
		"validate": "yarn lint && yarn test",
		"postpublish": "git push --tags",
		"deploy": "sh ./deploy.sh",
		"docs": "apidoc -i src -o docs",
		"postdocs": "opn docs/index.html"
	},
	"dependencies": {
		"axios": "^0.18.0",
		"bcryptjs": "2.4.3",
		"bluebird": "^3.5.0",
		"body-parser": "^1.17.0",
		"compression": "^1.6.2",
		"cors": "^2.8.3",
		"cross-env": "^5.0.1",
		"dotenv-safe": "^6.0.0",
		"express": "^4.15.2",
		"express-validation": "^1.0.2",
		"express-winston": "^2.5.1",
		"helmet": "^3.5.0",
		"http-status": "^1.0.1",
		"joi": "^10.4.1",
		"jwt-simple": "0.5.1",
		"lodash": "^4.17.4",
		"method-override": "^2.3.8",
		"moment-timezone": "^0.5.13",
		"mongoose": "^5.2.4",
		"pm2": "^3.0.0",
		"uuid": "^3.1.0",
		"winston": "^2.4.3"
	},
	"devDependencies": {
		"apidoc": "^0.17.5",
		"chai": "^4.1.0",
		"chai-as-promised": "^7.1.1",
		"coveralls": "^3.0.0",
		"eslint": "^4.2.0",
		"eslint-config-airbnb-base": "^12.0.1",
		"eslint-config-prettier": "^2.9.0",
		"eslint-plugin-import": "^2.2.0",
		"eslint-plugin-prettier": "^2.6.2",
		"eslint-watch": "^4.0.1",
		"husky": "^0.14.3",
		"mocha": "^5.2.0",
		"nodemon": "^1.11.0",
		"nyc": "^12.0.2",
		"onchange": "^4.1.0",
		"opn-cli": "^3.1.0",
		"prettier": "^1.13.7",
		"sinon": "^6.0.0",
		"sinon-chai": "^3.0.0",
		"supertest": "^3.0.0"
	}
}
